<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <shu.gobang.androidclient.GameView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gameview"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@id/gameview"
        android:id="@+id/mytv"
        android:layout_margin="4dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myiv"
        android:src="@drawable/handup"
        android:layout_toRightOf="@id/mytv"
        android:visibility="invisible"
        android:layout_alignBottom="@id/mytv"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myiv2"
        android:layout_toRightOf="@id/myiv"
        android:layout_alignBottom="@id/myiv" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myiv3"
        android:layout_toRightOf="@id/myiv2"
        android:layout_alignBottom="@id/myiv2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@id/mytv"
        android:id="@+id/optv"
        android:layout_margin="4dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/opiv"
        android:src="@drawable/handup"
        android:layout_alignBottom="@id/optv"
        android:visibility="invisible"
        android:layout_toRightOf="@id/optv"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/opiv2"
        android:layout_alignBottom="@id/opiv"
        android:layout_toRightOf="@id/opiv"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/opiv3"
        android:layout_alignBottom="@id/opiv2"
        android:layout_toRightOf="@id/opiv2"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/gameedit"/>
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameview"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="认输"
            android:id="@+id/giveup"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/retract"
            android:text="悔棋"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送"
            android:id="@+id/send"/>
    </LinearLayout>
</RelativeLayout>